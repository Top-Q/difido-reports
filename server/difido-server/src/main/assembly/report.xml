<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<formats>
		<format>zip</format>
		<format>dir</format>
	</formats>
	<id>report</id>
	<dependencySets>
		<dependencySet>
			<outputDirectory>lib</outputDirectory>
			<outputFileNameMapping>${artifact.artifactId}.${artifact.extension}</outputFileNameMapping>
			<includes>
				<include>*:difido-server:*</include>
			</includes>
		</dependencySet>
	</dependencySets>
	<fileSets>
		<fileSet>
			<outputDirectory>docRoot</outputDirectory>
			<directory>docRoot</directory>
			<excludes>
				<exclude>reports/</exclude>
			</excludes>
		</fileSet>
		<fileSet>
			<outputDirectory>data/index/reportserver/nodes/0/indices/.kibana</outputDirectory>
			<directory>src/main/kibana</directory>
		</fileSet>
		<fileSet>
			<outputDirectory>bin</outputDirectory>
			<directory>src/main/etc</directory>
			<fileMode>775</fileMode>
			<includes>
				<include>start.bat</include>
				<include>start.sh</include>
				<include>stop.sh</include>
				<include>difido</include>
			</includes>
		</fileSet>
		<fileSet>
			<outputDirectory>config</outputDirectory>
			<directory>src/main/etc</directory>
			<fileMode>775</fileMode>
			<includes>
				<include>difido_config.properties</include>
				<include>mail_body.vm</include>
				<include>mail_subject.vm</include>
				<include>mapping.json</include>
			</includes>
		</fileSet>
		<fileSet>
			<outputDirectory></outputDirectory>
			<directory>src/main/etc</directory>
			<fileMode>775</fileMode>
			<includes>
				<include>LICENSE.txt</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>./</directory>
			<outputDirectory>/plugin</outputDirectory>
			<excludes>
				<exclude>*/**</exclude>
			</excludes>
		</fileSet>
	</fileSets>
</assembly>